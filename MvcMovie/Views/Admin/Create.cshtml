@model MvcMovie.Models.CreateViewModel
@{
ViewData["Title"] = "Buat Tempat Wisata";
}
<style>
    h2{
 font-weight: 800;
 font-family:'comic sans-ms';
color: #0F3460;
font-size: 45px;
width: 100%;
line-height: 50px;
    }
    body{
  background-color: #D1E8E4;
}
</style>
<body>
    
<h2>Lengkapi Tempat Wisatamu agar menarik</h2>
<div class="row">
    <div class="col-md-4">
 <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <div class="form-group">
                <label asp-for="Destinasi.CategoryId" class="control-label"></label>
                <select asp-for="Destinasi.CategoryId" class="form-control" asp-items="Model.Names">
            </select>
            </div>
            <div class="form-group">
                <label asp-for="Destinasi.Place" class="control-label"></label>
                <input asp-for="Destinasi.Place" class="form-control" />
                <span asp-validation-for="Destinasi.Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destinasi.Kota" class="control-label"></label>
                <input asp-for="Destinasi.Kota" class="form-control" />
                <span asp-validation-for="Destinasi.Kota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destinasi.Price" class="control-label"></label>
                <input asp-for="Destinasi.Price" class="form-control" />
                <span asp-validation-for="Destinasi.Price" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Destinasi.Deskripsi" class="control-label"></label>
                <input asp-for="Destinasi.Deskripsi" class="form-control" />
                <span asp-validation-for="Destinasi.Deskripsi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destinasi.Verify" class="control-label"></label>
                <input asp-for="Destinasi.Verify" class="form-control" />
                <span asp-validation-for="Destinasi.Verify" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buat" class="btn btn-primary" />
                <a class="btn btn-danger" asp-controller="Admin" asp-action="Tempat">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</body>