@model IEnumerable<Destination>
@{
    ViewData["Title"] = "Tempat Wisata";
}
<style>
    .styleLink{ 
      background: #2F86A6;
      border-radius: 20px;
      margin-top: 20px;
      padding : 15px 20px 15px 20px;
      color: white;
      margin-bottom: 50px;
      }
.styleLink:hover{ 
      color: black;
      }
      .Navigasi {
          padding: 50px;
      }
      h4{
 font-family:'comic sans-ms';
color: #0F3460;
      }
      body{
  background-color: #D1E8E4;
}
</style>
<body>
    
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Tempat Wisata</th>
                <th scope="col">Kota </th>
                <th scope="col">Keterangan </th>
            </tr>
            </thead>
    @foreach (var item in Model)
    {
            <tbody>
            <tr>
                <td>@item.Place</td>    
                <td>@item.Kota</td>
                <td><a asp-controller="Admin" asp-action="DetailTempat" asp-route-id="@item.Id">Detail</a> |
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>
            </tbody>
    }
        </table>
        <div class="Navigasi">

<a class="styleLink"  asp-controller="Admin" asp-action="Create">Buat Tempat Wisata</a>
<a class="styleLink"  asp-controller="Admin" asp-action="Index">Kembali ke Halaman Utama</a>
        </div>
</body>