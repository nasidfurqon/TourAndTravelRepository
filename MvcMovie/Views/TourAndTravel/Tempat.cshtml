@model IEnumerable<Destination>
@{
    ViewData["Title"] = "Tempat Wisata";
}
<style>
    .styleLink{ 
      background: black;
      border-radius: 20px;
      margin-top: 20px;
      padding : 15px 20px 15px 20px;
      color: white;
      margin-bottom: 50px;
      }
      h4{
 font-family:'comic sans-ms';
color: #0F3460;
      }
      body{
  background-color: #D1E8E4;
}
</style>
<body>
    
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Tempat Wisata</th>
                <th scope="col">Kota </th>
                <th scope="col">Keterangan </th>
            </tr>
            </thead>
    @foreach (var item in Model)
    {
            <tbody>
            <tr>
                <td>@item.Place</td>    
                <td>@item.Kota</td>
                 <td><a asp-controller="TourItem" asp-action="Show" asp-route-id="@item.Id">Details</a>
            </tr>
            </tbody>
    }
        </table>
        
<h4 style="font-family: 'Zen Kurenaido', sans-serif;">Punya Rekomendasi Tempat Wisata?</h4>
<p style="font-family: 'Zen Kurenaido', sans-serif;">buat dibawah ini</p>
<a class="styleLink"  asp-controller="TourAndTravel" asp-action="CreateDeskripsi">Buat Tempat Wisata</a>
</body>