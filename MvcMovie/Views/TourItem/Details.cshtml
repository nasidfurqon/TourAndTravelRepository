@model IEnumerable<Destination>
@{
    ViewData["Title"] = "Details";
}
<style>
    h2{
    font-weight: 800;
    font-family: 'comic sans-ms';
    color: #0F3460;
    font-size: 45px;
    width: 100%;
    line-height: 50px;
    }
h4{
 font-weight: 800;
 font-family:'comic sans-ms';
color: black;
width: 100%;
line-height: 50px;
}
body{
  background-color: #D1E8E4;
}
.styleLink{ 
      background: black;
      border-radius: 20px;
      margin-top: 20px;
      padding : 15px 20px 15px 20px;
      color: white;
      }
</style>
<body>
    @foreach (var item in Model)
    {
    
<h2 style="text-align: center;"><u>@item.Place</u></h2>  
    <p>DestinationId :@item.Id</p>
    <p>Kategori @item.CategoryId</p>
    <p>@item.Deskripsi</p>
    <p>di tempat wisata @item.Place ini memiliki harga tiket <u>Rp.@Math.Round(@item.Price)</u></p>
    <a class="styleLink"  asp-controller="TourTransaksi" asp-action="Transaksi">Beli Tiket</a>
    }
</body>